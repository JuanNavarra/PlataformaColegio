
@model Colegio.Models.Col_Usuarios
@{
    ViewBag.Title = "Login";
}

<div class="login-box" style="left: 31%;position: relative;top:24px;">
    <div class="login-logo">
        <a href="#"><b>Aula</b>Virtual.</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Inicio de sesión Plataforma</p>

            @using (Html.BeginForm("LoginUser", "Login", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control txtbox", placeholder = "Usuario" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control txtbox", placeholder = "Contraseña" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
        </div>
        <!-- /.login-card-body -->
    </div>
</div>