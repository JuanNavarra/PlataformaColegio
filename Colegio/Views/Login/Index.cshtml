
@model Colegio.Models.Col_Usuarios
@{
    ViewBag.Title = "Login";
    ViewBag.Error = "Ususario o contraseña incorrectos";
}

<div class="login-box" style="left: 31%;position: relative;top:24px;">
    <div class="login-logo">
        <a href="#"><b>Aula</b>Virtual.</a>
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Inicio de sesión Plataforma</p>

            @using (Html.BeginForm("LoginUser", "Login", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control txtbox", placeholder = "Usuario", required = "required" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control txtbox", placeholder = "Contraseña", required = "required" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                    </div>
                </div>
            }
        </div>
        @if (!ViewBag.Bool)
        {
            <div class="card-footer text-muted">
                <div class="row">
                    <div class="col-12">
                        <div class="alert"
                             style="
                                    background: #f8d7da !important;
                                    color:#721c24 !important;
                                    border-color: #f5c6cb !important;
                                    text-align:center"
                             role="alert">
                            @ViewBag.Error
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>